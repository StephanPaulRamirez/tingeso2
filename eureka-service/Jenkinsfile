pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    stages {
        stage('Build maven') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/StephanPaulRamirez/tingeso2.git']])
                dir('eureka-service') {  // Cambia a la carpeta del microservicio
                    bat 'mvn clean package'
                }
            }
        }  

        stage('Build docker image') {
            steps {
                script {
                    bat 'docker build -t stephanpaulramirez/eureka-service:latest -f eureka-service/Dockerfile eureka-service'
                }
            }
        }

        stage('Push image to Docker Hub') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'dhpswid', variable: 'dhpsw')]) {
                        bat 'docker login -u stephanpaulramirez -p %dhpsw%'
                    }
                    bat 'docker push stephanpaulramirez/eureka-service:latest'
                }
            }
        }
    }
}



